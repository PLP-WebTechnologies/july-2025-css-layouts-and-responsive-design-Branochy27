/* ===== Base styles ===== */

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: Arial, sans-serif;
  line-height: 1.5;
  background-color: #f8f9fa;
  color: #333;
}

a {
  text-decoration: none;
  color: #007bff;
}

a:hover,
a:focus {
  text-decoration: underline;
}

/* ===== Container uses CSS Grid for main layout ===== */

.container {
  display: grid;
  grid-template-columns: 1fr 3fr 1.5fr;
  grid-template-rows: auto 1fr auto;
  grid-template-areas: 
    "header  header  header"
    "nav     main    sidebar"
    "footer  footer  footer";
  gap: 20px;
  max-width: 1200px;
  margin: 20px auto;
  padding: 0 15px;
  min-height: 100vh;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

header.header {
  grid-area: header;
  padding: 20px 0;
  border-bottom: 2px solid #007bff;
  text-align: center;
  background-color: #e9f1ff;
  border-radius: 8px 8px 0 0;
}

/* ===== Navigation using Flexbox ===== */

nav.nav {
  grid-area: nav;
  background-color: #007bff;
  border-radius: 8px;
  padding: 15px 10px;
}

nav.nav ul {
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
  list-style: none;
  gap: 15px;
}

/* Nav links styling */
nav.nav a {
  color: white;
  font-weight: bold;
  padding: 8px 12px;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

nav.nav a:hover,
nav.nav a:focus {
  background-color: #0056b3;
}

/* Main content and sidebar */

main.main-content {
  grid-area: main;
  padding: 15px 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: inset 0 0 10px #e1e5ea;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

main.main-content .intro h2 {
  margin-top: 0;
}

/* Cards inside main-content using Flexbox */

.cards {
  display: flex;
  gap: 15px;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  background-color: #dbe9ff;
  flex: 1 1 30%;
  padding: 15px;
  border-radius: 6px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  min-width: 250px;
  transition: transform 0.2s ease;
}

.card:hover,
.card:focus-within {
  transform: translateY(-5px);
}

/* Sidebar */

aside.sidebar {
  grid-area: sidebar;
  background-color: #f1f3f5;
  padding: 20px;
  border-radius: 8px;
  box-shadow: inset 0 0 10px #cbd5e0;
}

aside.sidebar h3 {
  margin-top: 0;
}

aside.sidebar ul {
  padding-left: 1rem;
  margin-top: 10px;
}

aside.sidebar ul li {
  margin-bottom: 8px;
}

/* Footer */

footer.footer {
  grid-area: footer;
  text-align: center;
  padding: 15px 10px;
  background-color: #007bff;
  color: white;
  border-radius: 0 0 8px 8px;
}

/* ===== Responsive styles ===== */

/* Tablet (portrait and small landscape) */
@media (max-width: 900px) {
  .container {
    grid-template-columns: 1fr 2fr;
    grid-template-areas: 
      "header  header"
      "nav     nav"
      "main    sidebar"
      "footer  footer";
    gap: 15px;
  }

  nav.nav ul {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }

  nav.nav ul li {
    flex: 1 1 auto;
    text-align: center;
  }

  .cards {
    justify-content: center;
  }

  .card {
    flex: 1 1 45%;
    min-width: 200px;
  }

  aside.sidebar {
    padding: 15px;
  }
}

/* Mobile */
@media (max-width: 600px) {
  .container {
    grid-template-columns: 1fr;
    grid-template-areas:
      "header"
      "nav"
      "main"
      "sidebar"
      "footer";
    gap: 10px;
    margin: 10px;
    padding: 10px;
  }

  nav.nav ul {
    flex-direction: column;
    gap: 10px;
  }

  .cards {
    flex-direction: column;
    gap: 15px;
  }

  .card {
    flex: 1 1 100%;
    min-width: unset;
  }

  aside.sidebar {
    order: 4;
    padding: 15px 10px;
  }
}


</body>
</html>
